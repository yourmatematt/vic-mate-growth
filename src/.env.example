# Supabase Configuration
# Get these values from your Supabase project dashboard (https://app.supabase.com)

# Your Supabase project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Your Supabase anonymous/public key (safe to expose in frontend)
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Your Supabase service role key (KEEP SECRET - server-side only)
# This key bypasses RLS and should only be used in secure server environments
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Application Configuration

# Base URL for your application (used for redirects, emails, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment (development, staging, production)
NODE_ENV=development

# API Configuration

# Rate limiting (requests per minute per IP)
RATE_LIMIT_MAX_REQUESTS=100

# JWT Secret for additional token verification (optional)
JWT_SECRET=your_jwt_secret_here

# Email Configuration (if using custom email provider)

# SMTP Settings (optional - Supabase handles auth emails by default)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@yourmateagency.com.au

# Third-party Services (optional)

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Image Optimization Service (if using external service)
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Storage Configuration

# Maximum file upload size (in bytes)
MAX_FILE_SIZE=10485760

# Allowed image types
ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# Database Configuration (Supabase handles this, but useful for reference)

# Database connection details (managed by Supabase)
# DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Security Configuration

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Session configuration
SESSION_SECRET=your_session_secret_here

# Development Tools

# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE_LOGGING=false

# Webhook endpoints (if implementing webhooks)
WEBHOOK_SECRET=your_webhook_secret_here

# Instructions:
# 1. Copy this file to .env.local (for local development)
# 2. Copy this file to .env (for production deployment)
# 3. Fill in the actual values for your Supabase project
# 4. Never commit the actual .env files to version control
# 5. Keep the SUPABASE_SERVICE_ROLE_KEY secret and secure